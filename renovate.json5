{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended"],
  dependencyDashboard: false,
  timezone: "Asia/Tokyo",
  flux: {
    enabled: false,
  },
  customManagers: [
    {
      customType: "regex",
      fileMatch: ["^k8s/apps/.*/helm-overlay.yaml$", "^k8s/apps/.*/helm.yaml$"],
      matchStringsStrategy: "combination",
      matchStrings: [
        '  url: "?(?<registryUrl>\\S+)"?\\s*',
        '      chart: "?(?<depName>[a-z0-9-]+)"?\\s*',
        '      version: "?(?<currentValue>\\S+)"?\\s*',
      ],
      datasourceTemplate: "helm",
    },
    {
      customType: "regex",
      fileMatch: "^k8s/apps/.*/kustomization.yaml$",
      matchStringsStrategy: "any",
      matchStrings: [
        "https:\\/\\/github\\.com\\/(?<depName>.*?)\\/releases\\/download\\/(?<currentValue>\\S+)\\/.*\\s*",
      ],
      datasourceTemplate: "github-tags",
    },
  ],
  packageRules: [
    {
      matchUpdateTypes: ["patch"],
      matchDatasources: ["helm"],
      matchCurrentVersion: "!/^0/",
      automerge: true,
    },
    {
      matchUpdateTypes: ["patch"],
      matchDatasources: ["github-tags"],
      matchCurrentVersion: "!/^0/",
      automerge: true,
    },
  ],
  internalChecksFilter: "none",
  // schedule: ["before 11am on saturday"],
  // automergeSchedule: ["after 7am and before 11am on saturday"],
  // updateNotScheduled: false,
  // prHourlyLimit: 0,
}
